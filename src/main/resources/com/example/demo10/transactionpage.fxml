<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="450.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/19" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.demo10.TransactionPage">
   <children>
      <Label alignment="CENTER" layoutX="150.0" layoutY="20.0" prefHeight="40.0" prefWidth="300.0" text="Select Transaction">
         <font>
            <Font size="24.0" />
         </font>
      </Label>
      <Button fx:id="withdrawButton" layoutX="80.0" layoutY="80.0" mnemonicParsing="false" prefHeight="130.0" prefWidth="200.0" text="Withdraw">
         <font>
            <Font size="18.0" />
         </font>
      </Button>
      <Button fx:id="checkBalanceButton" layoutX="80.0" layoutY="230.0" mnemonicParsing="false" prefHeight="130.0" prefWidth="200.0" text="Check Balance">
         <font>
            <Font size="18.0" />
         </font>
      </Button>
      <Button fx:id="depositButton" layoutX="320.0" layoutY="80.0" mnemonicParsing="false" prefHeight="130.0" prefWidth="200.0" text="Deposit">
         <font>
            <Font size="18.0" />
         </font>
      </Button>
      <Button fx:id="removeCardButton" layoutX="320.0" layoutY="230.0" mnemonicParsing="false" prefHeight="130.0" prefWidth="200.0" text="Remove Card">
         <font>
            <Font size="18.0" />
         </font>
      </Button>
      <Label fx:id="statusLabel" alignment="CENTER" layoutX="150.0" layoutY="400.0" prefHeight="25.0" prefWidth="300.0" text="Current state: ">
         <font>
            <Font size="14.0" />
         </font>
      </Label>
   </children>
</AnchorPane>
